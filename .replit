modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Eleventy Server"

[[workflows.workflow]]
name = "Eleventy Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install @11ty/eleventy && npx @11ty/eleventy --serve --port=5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "npm install @11ty/eleventy && npx @11ty/eleventy --serve --port=5000"]

[[ports]]
localPort = 5000
externalPort = 80
