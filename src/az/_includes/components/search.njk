<div class="search-container">
  <div class="search-input-container">
    <input type="text" id="searchInput" placeholder="Məzmun axtarın..." class="search-input">
    <button type="button" id="searchButton" class="search-button">
      <i class="fas fa-search"></i>
    </button>
  </div>
  
  <div id="searchResults" class="search-results" style="display: none;">
    <div class="search-results-header">
      <h3>Axtarış Nəticələri</h3>
      <button type="button" id="clearSearch" class="clear-search">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div id="searchResultsList" class="search-results-list">
      <!-- Results will be populated by JavaScript -->
    </div>
  </div>
</div>