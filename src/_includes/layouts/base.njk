<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Primary Meta Tags -->
  <title>{% if title %}{{ title }} | {% endif %}{{ site.title }}</title>
  <meta name="title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
  <meta name="description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}">
  <meta name="keywords" content="{% if keywords %}{{ keywords }}{% else %}English learning, vocabulary, grammar, stories, beginner English, intermediate English, advanced English, online English lessons{% endif %}">
  <meta name="author" content="{{ site.author }}">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href="https://www.ingilisdili.com{{ page.url }}">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://www.ingilisdili.com{{ page.url }}">
  <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
  <meta property="og:description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}">
  <meta property="og:image" content="https://www.ingilisdili.com/images/og-image.jpg">
  <meta property="og:locale" content="en_US">
  <meta property="og:site_name" content="{{ site.title }}">
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="https://www.ingilisdili.com{{ page.url }}">
  <meta property="twitter:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
  <meta property="twitter:description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}">
  <meta property="twitter:image" content="https://www.ingilisdili.com/images/og-image.jpg">
  
  <!-- Hreflang for multilingual SEO -->
  <link rel="alternate" hreflang="en" href="https://www.ingilisdili.com{{ page.url }}">
  <link rel="alternate" hreflang="az" href="https://www.ingilisdili.com/az{% if page.url != '/' %}{{ page.url | replace('/', '') | replace('vocabulary', 'luget') | replace('grammar', 'qrammatika') | replace('stories', 'hekayeler') | replace('about', 'haqqinda') | replace('contact', 'elaqe') }}{% endif %}/">
  <link rel="alternate" hreflang="x-default" href="https://www.ingilisdili.com{{ page.url }}">
  
  <!-- Preconnect for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://www.googletagmanager.com">
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&family=Roboto+Slab:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  
  <!-- Sitemap -->
  <link rel="sitemap" type="application/xml" href="/sitemap.xml">
  
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "EducationalOrganization",
    "name": "{{ site.title }}",
    "url": "https://www.ingilisdili.com",
    "logo": "https://www.ingilisdili.com/images/logo.png",
    "description": "{{ site.description }}",
    "sameAs": [],
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "AZ"
    },
    "educationalCredentialAwarded": "English Language Proficiency",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "English Learning Courses",
      "itemListElement": [
        {
          "@type": "Course",
          "name": "Beginner English Vocabulary",
          "description": "Essential vocabulary for English language beginners",
          "provider": {
            "@type": "EducationalOrganization",
            "name": "{{ site.title }}"
          },
          "educationalLevel": "Beginner"
        },
        {
          "@type": "Course",
          "name": "Intermediate English Grammar",
          "description": "Comprehensive grammar lessons for intermediate learners",
          "provider": {
            "@type": "EducationalOrganization",
            "name": "{{ site.title }}"
          },
          "educationalLevel": "Intermediate"
        },
        {
          "@type": "Course",
          "name": "Advanced English Stories",
          "description": "Complex reading materials for advanced English learners",
          "provider": {
            "@type": "EducationalOrganization",
            "name": "{{ site.title }}"
          },
          "educationalLevel": "Advanced"
        }
      ]
    }
  }
  </script>

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-5FLZJH1PD0"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-5FLZJH1PD0');
  </script>
</head>
<body>
  <header class="site-header">
    <div class="container">
      <div class="site-branding">
        <a href="/" class="logo">
          <span class="logo-text">{{ site.title }}</span>
        </a>
        <p class="site-tagline">{{ site.tagline }}</p>
      </div>
      <div class="header-right">
        {% include "components/navigation.njk" %}
        <div class="language-switcher">
          <a href="/" class="lang-link active">English</a>
          <span class="lang-separator">|</span>
          <a href="/az/" class="lang-link" id="az-lang-link">Az…ôrbaycanca</a>
        </div>
      </div>
    </div>
  </header>

  <main class="site-content">
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <div class="container">
      {% include "components/footer.njk" %}
    </div>
  </footer>

  <script src="/js/main.js"></script>
  <script src="/js/search.js"></script>
  <script src="/js/language-switcher.js"></script>
</body>
</html>
