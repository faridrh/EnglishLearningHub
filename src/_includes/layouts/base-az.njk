    "sameAs": [],
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "AZ"
    },
    "educationalCredentialAwarded": "İngilis Dili Bilik Səviyyəsi",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "İngilis Dili Öyrənmə Kursları",
      "itemListElement": [
        {
          "@type": "Course",
          "name": "Başlanğıc İngilis Lüğəti",
          "description": "İngilis dili başlanğıc səviyyəsi üçün vacib lüğət",
          "provider": {
            "@type": "EducationalOrganization",
            "name": "İngilis dili öyrən"
          },
          "educationalLevel": "Başlanğıc"
